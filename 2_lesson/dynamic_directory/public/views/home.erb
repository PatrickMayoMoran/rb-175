<!doctype HTML>
<html>
<head>
  <meta charset='utf-8' lang='en'>
</head>

<body>
  <h1>Files</h1>
  <ul>
    <% @files.each do |file| %>
    <li>
      <a href="<%= file %>"><%= file %></a>
    </li>
    <% end %>
  </ul>

  <p>
    <% if params[:sort] == "descending" %>
      <a href="/">Sort ascending</a>
    <% else %>
      <a href="/?sort=descending">Sort descending</a>
    <% end %>
  </p>
</body>

</html>

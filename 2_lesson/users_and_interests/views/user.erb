<% info = @users[@user] %>

<h1><%= @user.to_s %></h1>

<h3>Email Address: </h3>
<ul>
  <li><%= info[:email] %></li>
</ul>

<h3>Interests:</h3>
<ul>
  <li><%= info[:interests].join(", ") %></li>
</ul>

<footer>
  <h3>Other Users</h3>
  <ul>
    <% @users.each_key do |user| %>
      <% next if user == @user %>
      <%= display_user(user) %>
    <% end %>
  </ul>
</footer>
